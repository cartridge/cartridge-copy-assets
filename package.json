{
  "name": "cartridge-copy-assets",
  "version": "0.0.0-development",
  "description": "Copy module for the cartridge project",
  "keywords": [
    "gulp",
    "dependency",
    "cartridge",
    "cartridge-module",
    "cartridge-task"
  ],
  "homepage": "https://github.com/cartridge/cartridge-copy-assets",
  "bugs": {
    "url": "https://github.com/cartridge/cartridge-copy-assets/issues"
  },
  "license": "MIT",
  "author": "Code Computerlove <npm@codecomputerlove.co.uk>",
  "main": "task.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cartridge/cartridge-copy-assets.git"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "test": "echo \"Error: no test specified\" && exit 0",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "branch": "master"
  },
  "dependencies": {
    "cartridge-module-util": "~0.4.0",
    "yargs": "^4.3.2"
  },
  "devDependencies": {
    "chai": "1.10.0",
    "chai-fs": "^0.1.0",
    "cz-conventional-changelog": "^1.1.5",
    "fs-extra": "^0.26.7",
    "ghooks": "^1.2.1",
    "mocha": "^5.2.0",
    "semantic-release": "^8.2.0",
    "validate-commit-msg": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  }
}
